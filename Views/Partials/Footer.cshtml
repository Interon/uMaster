@inherits Umbraco.Web.Mvc.UmbracoTemplatePage

@{
    Layout = null;
}

<!-- FOOTER -->
<footer style="color:@CurrentPage.textColor;background-color:@CurrentPage.backgroundColorTopBar">
    <!-- copyright , scrollTo Top -->
    <div style="color:@CurrentPage.textColor;background-color:@CurrentPage.masterBackgroundColor" class="footer-bar">
        <div class="container">
            <span class="copyright">2015 - Copyright &copy; @CurrentPage.companyName. All Rights Reserved.</span>
            <a class="toTop" href="#topNav">BACK TO TOP <i class="fa fa-arrow-circle-up"></i></a>
        </div>
    </div>
    <!-- copyright , scrollTo Top -->
    <!-- footer content -->
    <div style="color:@CurrentPage.textColor;background-color:@CurrentPage.backgroundColor" class="footer-content">
        <div class="container">
            <div class="row">

                <!-- FOOTER CONTACT INFO -->
                <div class="column col-md-4">
                    <h3>CONTACT</h3>
                    <p style="color:@CurrentPage.textColor" class="contact-desc">
                        Drop us a line or pop in for a visit
                    </p>
                    <address class="font-opensans">
                        <ul>
                            <li style="color:@CurrentPage.textColor" class="footer-sprite address">
                                @Html.Raw(CurrentPage.address)

                            </li>
                            <li style="color:@CurrentPage.textColor" class="footer-sprite phone">
                                Phone: 	@Html.Raw(CurrentPage.telephoneNumber)
                            </li>
                            <li style="color:@CurrentPage.textColor" class="footer-sprite email">
                                <a href="mailto: @CurrentPage.email">@CurrentPage.email</a>
                            </li>
                        </ul>
                    </address>
                </div>
                <!-- /FOOTER CONTACT INFO -->
                <!-- FOOTER LOGO -->
                <div style="color:@CurrentPage.textColor;background-color:@CurrentPage.masterColor" class="column logo col-md-4 text-center">
                   
					<div class="logo-content">
						@try
				           {
                        @*<img src="@Umbraco.Media(CurrentPage.logo).Url" alt="" />*@
                        }
                        catch{}
                    </div>
						

                </div>

                <!-- /FOOTER LOGO -->
                <!-- FOOTER LATEST POSTS -->
             
            </div>
            <div class="row">
                <div class="column col-md-4 >

                </div>
                <div class="column col-md-4">

                </div>
                <div class="column col-md-4 text-center margin-top20">
                    <div style="font-size:40px;" class="socialmedia">
                        <a class="fa fa-facebook" target="_blank" href="@CurrentPage.facebook"></a>
                        <!-- <a class="fa fa-twitter" target="_blank" href="@CurrentPage.twitter"></a>-->
                        <a class="fa fa-linkedin" target="_blank" href="@CurrentPage.linkedin"></a>
                    </div>
                </div>
                <div class="column col-md-4 ">

                </div>
            </div>

        </div>
    </div>
    <!-- footer content -->
</footer>
<!-- /FOOTER -->
